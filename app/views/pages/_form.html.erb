<%= form_for @contact, url: pages_contact_path do |f| %>
  <div class="field has-addons">
    <div class="control">
      <%= f.text_field  :first_name, required: true, class: "input", placeholder: "First name" %>
    </div>

    <div class="control">
      <%= f.text_field  :last_name, required: true, class: "input", placeholder: "Last name" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.email_field  :email, required: true, class: "input", placeholder: "Email address" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.text_area  :message, required: true, class: "textarea", placeholder: "Message" %>
    </div>
  </div>

  <div class="field">
    <div class="control has-text-centered">
      <%= f.submit 'Send Message', class: 'button is-primary' %>
    </div>
  </div>
  <%= f.text_field :nickname, :hint => 'Leave this field blank!', hidden: true %>
<% end %>
